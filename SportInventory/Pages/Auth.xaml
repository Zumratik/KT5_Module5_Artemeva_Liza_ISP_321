<Page x:Class="SportInventory.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportInventory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС по прокату спортивного инвентаря - Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content ="Login:"></Label>
            <TextBox x:Name="LoginBox" ></TextBox>
            <Label Content ="Password:"></Label>
            <PasswordBox x:Name="PasswordBox" ></PasswordBox>
            <Button  x:Name="LogButton" Margin="10" Click="LogButton_Click" Content="Войти"></Button>
        </StackPanel>
    </Grid>
</Page>
